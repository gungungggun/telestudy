.anm-jelly
  animation-duration 4s
  animation-timing-function ease-in
  animation-iteration-count infinite
  transform-origin bottom center
  animation-name jelly

@keyframes jelly
  0%
    transform scale(1, 1)
  8%
    transform scale(1, 1)
  10%
    transform scale(1.1, 0.9)
  13%
    transform scale(0.9, 1.1)
  17.5%
    transform scale(1, 1)
  19%
    transform scale(1, 1)
  58%
    transform scale(1, 1)
  60%
    transform scale(1.1, 0.9)
  63%
    transform scale(0.9, 1.1)
  67.5%
    transform scale(1, 1)
  69%
    transform scale(1, 1)
  100%
    transform scale(1, 1)

.anm-flush
  animation-duration .4s
  animation-timing-function ease-in
  animation-iteration-count 1
  animation-name flush

@keyframes flush
  0%
    opacity 0
  30%
    opacity 0.7
  100%
    opacity 0

.anm-error
  animation shakeX .3s
  animation-iteration-count 3

@keyframes shakeX
  0%
    transform translateX(8px)
  25%
    transform translateX(0)
  75%
    transform translateX(8px)
  100%
    transform translateX(0)

@keyframes bounceIn
  0%
    transform scale(0)
    opacity 0
  50%
    transform scale(1.2)
    opacity .7
  60%
    transform scale(0.6)
    opacity 1
  80%
    transform scale(1.05)
  100%
    transform scale(1)
    opacity 1
